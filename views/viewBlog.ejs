<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title><%= blog.title %></title>
  </head>
  <body>
    <%- include("./partials/nav") %>

    <div class="container mt-4">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <h1 class="mb-2"><%= blog.title %></h1>

          <p class="text-muted mb-3">
            By <strong><%= blog.author.fullname %></strong>
            Â· <%= blog.createdAt.toDateString() %>
          </p>

          <% if (blog.coverImageURL) { %>
          <img
            src="<%= blog.coverImageURL %>"
            class="img-fluid rounded mb-4"
            alt="Blog cover"
          />
          <% } %>

          <div class="mb-4" style="white-space: pre-line">
            <%= blog.content %>
          </div>

          <% if (blog.tags.length) { %>
          <div class="mt-3">
            <% blog.tags.forEach(tag => { %>
            <span class="badge bg-secondary me-1"><%= tag %></span>
            <% }) %>
          </div>
          <% } %> <% if (user && user._id === blog.author._id.toString()) { %>
          <div class="mb-3 mt-3">
            <a
              href="/blog/<%= blog._id %>/edit"
              class="btn btn-sm btn-outline-primary"
            >
              Edit
            </a>

            <form
              action="/blog/<%= blog._id %>?_method=DELETE"
              method="POST"
              class="d-inline"
              onsubmit="return confirm('Are you sure you want to delete this blog?');"
            >
              <button class="btn btn-sm btn-outline-danger">Delete</button>
            </form>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <%- include('./partials/footer') %>
    <%- include("./partials/scripts") %>
  </body>
</html>
