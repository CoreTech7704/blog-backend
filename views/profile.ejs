<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>User Profile</title>
  </head>
  <body class="d-flex flex-column min-vh-100">
    <%- include("./partials/nav") %>

    <main class="flex-grow-1">
      <div class="container mt-4">
        <h3 class="mb-4">Profile</h3>

        <div class="row">
          <!-- Left: Profile Card -->
          <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
              <div class="card-body text-center">
                <img
                  src="/images/default.jpg"
                  class="rounded-circle mb-3"
                  width="120"
                  alt="Profile image"
                />

                <h5 class="mb-1"><%= user.fullname %></h5>
                <p class="text-muted mb-2"><%= user.email %></p>

                <span class="badge bg-secondary mb-3"> <%= user.role %> </span>

                <p class="text-muted small mb-0">
                  Member since <%= new Date(user.createdAt).toDateString() %>
                </p>
              </div>
            </div>
          </div>

          <!-- Right: Details + Stats -->
          <div class="col-md-8">
            <!-- Details -->
            <div class="card shadow-sm mb-4">
              <div class="card-body">
                <h5 class="mb-3">Account Details</h5>

                <div class="row mb-2">
                  <div class="col-sm-4 text-muted">Full Name</div>
                  <div class="col-sm-8"><%= user.fullname %></div>
                </div>

                <div class="row mb-2">
                  <div class="col-sm-4 text-muted">Email</div>
                  <div class="col-sm-8"><%= user.email %></div>
                </div>

                <div class="row mb-2">
                  <div class="col-sm-4 text-muted">Role</div>
                  <div class="col-sm-8"><%= user.role %></div>
                </div>

                <div class="row mb-2">
                  <div class="col-sm-4 text-muted">Account Status</div>
                  <div class="col-sm-8">
                    <span class="badge bg-success">Active</span>
                  </div>
                </div>

                <div class="row">
                  <div class="col-sm-4 text-muted">User ID</div>
                  <div class="col-sm-8 text-monospace small">
                    <%= user._id %>
                  </div>
                </div>
              </div>
            </div>

            <!-- Stats -->
            <div class="row">
              <div class="col-md-4 mb-3">
                <div class="card border-0 shadow-sm">
                  <div class="card-body text-center">
                    <h5><%= stats.total %></h5>
                    <p class="text-muted mb-0">Total Blogs</p>
                  </div>
                </div>
              </div>

              <div class="col-md-4 mb-3">
                <div class="card border-0 shadow-sm">
                  <div class="card-body text-center">
                    <h5 class="text-success"><%= stats.published %></h5>
                    <p class="text-muted mb-0">Published</p>
                  </div>
                </div>
              </div>

              <div class="col-md-4 mb-3">
                <div class="card border-0 shadow-sm">
                  <div class="card-body text-center">
                    <h5 class="text-warning"><%= stats.drafts %></h5>
                    <p class="text-muted mb-0">Drafts</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div></div>
    </main>

    <%- include("./partials/footer") %>
  </body>
</html>
